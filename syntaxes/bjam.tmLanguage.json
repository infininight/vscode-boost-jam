    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Boost.Jam",
    "scopeName": "source.bjam",
    "patterns": [
        {
            "include": "#comments"
        }
    ],
    "repository": {
		"comments": {
            "patterns": [
                {
                    "begin": "^(#)",
                    "captures": {
                        "1": {
                            "name": "punctuation.definition.comment.bjam"
                        }
                    },
                    "end": "\\n",
                    "name": "comment.line.number-sign.bjam"
                }
            ]
        }
    }
}
